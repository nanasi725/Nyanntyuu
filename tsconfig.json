{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./src",        // ソースコードはsrcフォルダに入れる
    "outDir": "./dist",        // コンパイル結果はdistフォルダに出す
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}